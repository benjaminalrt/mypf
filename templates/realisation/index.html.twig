{% extends 'base-admin.html.twig' %}

{% block title %}Realisation index{% endblock %}

{% block body %}

    <h1>Realisation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Title</th>
                <th>Text</th>
                <th>Type</th>
                <th>Techs</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for realisation in realisations %}
            <tr>
                <td>{{ realisation.id }}</td>
                <td>{{ realisation.url }}</td>
                <td>{{ realisation.title }}</td>
                <td>{{ realisation.text }}</td>
                <td>{{ realisation.type }}</td>
                <td>{{ realisation.techs ? realisation.techs|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('realisation_show', {'id': realisation.id}) }}">show</a>
                    <a href="{{ path('realisation_edit', {'id': realisation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('realisation_new') }}">Create new</a>
{% endblock %}
